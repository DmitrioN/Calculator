<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text="2+3"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonÐ¡"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonPercent"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonPercent"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonDivision"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonDelete"
            android:textColor="@color/white"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

    </LinearLayout >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonSeven"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button7"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonEight"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button8"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonNine"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button9"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonMultiply"
            android:textColor="@color/white"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button4"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonFive"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button5"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonSix"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button6"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonMinus"
            android:textColor="@color/white"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button1"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button2"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button3"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonFold"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonAddition"
            android:textColor="@color/white"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/purple"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/LayoutHeight"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/ButtonPoint"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/Button0"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/ButtonMarginRight"
            android:textSize="@dimen/ButtonTextSize" />

        <Button
            android:id="@+id/buttonEqually"
            android:layout_width="@dimen/ButtonWidth"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@null"
            android:text="@string/ButtonEqually"
            android:textColor="@color/white"
            android:textSize="@dimen/ButtonTextSize"
            android:backgroundTint="@color/orange"/>

    </LinearLayout>

</LinearLayout>